<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lvlbg"
    tools:context=".levels">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/levels"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:textSize = "30sp"
            android:fontFamily="@font/dark_distance"
            android:layout_marginTop="30dp"
            android:orientation = "vertical">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/beginner"
                android:background="@drawable/redgradient1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Beginner"
                    android:textColor="@color/white"
                    android:textSize="30sp" />



            </RelativeLayout>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-15dp"
                android:src="@drawable/begnlogo" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_marginTop="10dp"
            android:id="@+id/intermediate"
            android:background="@drawable/redgradient2"
            >

            <ImageView
                android:layout_width="207dp"
                android:layout_height="350dp"

                android:layout_marginStart="-50dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/intmlogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:text="@string/intermediate"
                android:textColor="@color/white"
                android:textSize="30sp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingTop="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1900dp"
                android:id="@+id/advance"
                android:background="@drawable/redgradient1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="@string/advance"
                    android:textColor="@color/white"
                    android:textSize="30sp" />



            </RelativeLayout>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/advlogo" />


        </RelativeLayout>



    </LinearLayout>




</ScrollView>