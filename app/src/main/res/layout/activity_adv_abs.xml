<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".adv_abs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/abs_header"
                android:fontFamily="@font/dark_distance"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:text="ABS Workout"
                android:textSize="20sp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_below="@+id/abs_header"
                android:id="@+id/adv_abs_w1"
                android:layout_height="175dp"
                android:src="@drawable/warmup"/>

            <ImageView
                android:id="@+id/vi_abs_w1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/adv_abs_w1"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_abs_w1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/adv_abs_w1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>


            <ImageView
                android:id="@+id/vi_abs_w2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_abs_w2"
                android:layout_marginTop="380dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/adv_abs_w2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_below="@id/adv_abs_w1"
                android:layout_marginTop="150dp"
                android:src="@drawable/dumbell_curl" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_abs_w2"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_abs_w2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </TextView>

            <ImageView
                android:id="@+id/vi_abs_w3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_abs_w3"
                android:layout_marginTop="690dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_abs_w3"
                android:layout_height="175dp"
                android:layout_below="@id/adv_abs_w2"
                android:layout_marginTop="130dp"
                android:src="@drawable/hammer_curl" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_abs_w3"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_abs_w3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </TextView>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_abs_w4"
                android:layout_height="175dp"
                android:layout_below="@id/adv_abs_w3"
                android:layout_marginTop="120dp"
                android:src="@drawable/concentration_curl" />

            <ImageView
                android:id="@+id/vi_abs_w4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_abs_w4"
                android:layout_marginTop="980dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_abs_w4"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_abs_w4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </TextView>
            <ImageView
                android:id="@+id/vi_abs_w5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_abs_w4"
                android:layout_marginTop="1295dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_abs_w5"
                android:layout_height="175dp"
                android:layout_below="@id/adv_abs_w4"
                android:layout_marginTop="130dp"
                android:src="@drawable/rest" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_abs_w5"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_abs_w5"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </TextView>

            <ImageView
                android:id="@+id/vi_abs_w6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_abs_w5"
                android:layout_marginTop="1620dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_abs_w6"
                android:layout_height="175dp"
                android:layout_below="@id/adv_abs_w5"
                android:layout_marginTop="150dp"
                android:src="@drawable/rest" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_abs_w6"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_abs_w6"
                android:paddingBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </TextView>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>