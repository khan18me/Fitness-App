<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg1"
    tools:context=".advance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/advance"
            android:textSize = "30sp"
            android:fontFamily="@font/dark_distance"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:orientation = "vertical">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/adv_bicep_btn"
                android:background="@drawable/bg2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="@string/biceps"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/muscle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/adv_tricep_btn"
                android:background="@drawable/bg2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="@string/triceps"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp" />



            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/triceps" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/adv_chest_btn"
                android:background="@drawable/bg2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="Chest"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp" />



            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/chest" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/adv_back_btn"
                android:background="@drawable/bg2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="Back"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/back" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/adv_shoulder_btn"
                android:background="@drawable/bg2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="Shoulder"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp"/>



            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/shoulder" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/adv_abs_btn"
                android:background="@drawable/bg2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="Abs"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp" />



            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/abs" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/adv_legs_btn"
                android:background="@drawable/bg2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="@string/legs"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp" />


                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-20dp"
                    android:src="@drawable/leg" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>