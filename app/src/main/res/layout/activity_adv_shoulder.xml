<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".adv_shoulder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/shoulder_header"
                android:fontFamily="@font/dark_distance"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Shoulder Workout"
                android:textSize="20sp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_below="@+id/shoulder_header"
                android:id="@+id/adv_shoulder_w1"
                android:layout_height="175dp"
                android:src="@drawable/adv_shoulder_w1"/>

            <ImageView
                android:id="@+id/vi_shoulder_w1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/adv_shoulder_w1"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_shoulder_w1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/adv_shoulder_w1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>


            <ImageView
                android:id="@+id/vi_shoulder_w2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_shoulder_w2"
                android:layout_marginTop="430dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/adv_shoulder_w2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_below="@id/adv_shoulder_w1"
                android:layout_marginTop="200dp"
                android:src="@drawable/beg_shoulder_w5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_shoulder_w2"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_shoulder_w2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

            </TextView>

            <ImageView
                android:id="@+id/vi_shoulder_w3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_shoulder_w3"
                android:layout_marginTop="850dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_shoulder_w3"
                android:layout_height="175dp"
                android:layout_below="@id/adv_shoulder_w2"
                android:layout_marginTop="250dp"
                android:src="@drawable/adv_shoulder_w3" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_shoulder_w3"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_shoulder_w3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

            </TextView>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_shoulder_w4"
                android:layout_height="175dp"
                android:layout_below="@id/adv_shoulder_w3"
                android:layout_marginTop="200dp"
                android:src="@drawable/itm_shoulder_w4" />

            <ImageView
                android:id="@+id/vi_shoulder_w4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_shoulder_w4"
                android:layout_marginTop="1230dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_shoulder_w4"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_shoulder_w4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

            </TextView>
            <ImageView
                android:id="@+id/vi_shoulder_w5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_shoulder_w4"
                android:layout_marginTop="1620dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_shoulder_w5"
                android:layout_height="175dp"
                android:layout_below="@id/adv_shoulder_w4"
                android:layout_marginTop="220dp"
                android:src="@drawable/itm_shoulder_w5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_shoulder_w5"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_shoulder_w5"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

            </TextView>

            <ImageView
                android:id="@+id/vi_shoulder_w6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_alignEnd="@+id/adv_shoulder_w5"
                android:layout_marginTop="2020dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/play_button" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:id="@+id/adv_shoulder_w6"
                android:layout_height="175dp"
                android:layout_below="@id/adv_shoulder_w5"
                android:layout_marginTop="220dp"
                android:src="@drawable/adv_shoulder_w6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/adv_shoulder_w6"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/adv_shoulder_w6"
                android:paddingBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

            </TextView>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>